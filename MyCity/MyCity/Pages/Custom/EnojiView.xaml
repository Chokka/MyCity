<?xml version="1.0" encoding="UTF-8"?>
<pages:PopupPage xmlns="http://xamarin.com/schemas/2014/forms"
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
		xmlns:controls="clr-namespace:XLabs.Forms.Controls;assembly=XLabs.Forms"
		xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
		x:Class="MyCity.EnojiView" Padding = "5">
	<ContentView.Content>
		<StackLayout VerticalOptions = "CenterAndExpand" HeightRequest = "200" BackgroundColor = "#99d9ea">
			
			<controls:ImageButton x:Name = "closeButton" Image="close.png" HorizontalOptions="End" VerticalOptions="Start" WidthRequest="25" HeightRequest="25"/>
			<Grid VerticalOptions = "FillAndExpand" HorizontalOptions = "FillAndExpand" Padding = "10"  >
				<Grid.RowDefinitions>
					<RowDefinition Height = "1*"/>
					<RowDefinition Height = "1*"/>
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width = "1*"/>
					<ColumnDefinition Width = "1*"/>
					<ColumnDefinition Width = "1*"/>
				</Grid.ColumnDefinitions>
				<StackLayout Grid.Row = "0" Grid.Column = "0">
					<controls:ImageButton x:Name = "cold_emojiButton" ClassId = "cold_emoji" Image="cold_emoji.png" WidthRequest="45" HeightRequest="45"/>
					<Label Text = "ColdSweat" HorizontalOptions = "CenterAndExpand"/>
				</StackLayout>
				<StackLayout  Grid.Row = "0" Grid.Column = "1">
					<controls:ImageButton x:Name = "crying_emojiButton" ClassId = "crying_emoji" Image="crying_emoji.png" WidthRequest="45" HeightRequest="45"/>
					<Label Text = "CryingFace" HorizontalOptions = "CenterAndExpand"/>
				</StackLayout>
				<StackLayout  Grid.Row = "0" Grid.Column = "2">
					<controls:ImageButton x:Name = "nerd_emojiButton" ClassId = "nerd_emoji" Image="nerd_emoji.png" WidthRequest="45" HeightRequest="45"/>
					<Label Text = "NerdGlass" HorizontalOptions = "CenterAndExpand"/>
				</StackLayout>
				<StackLayout Grid.Row = "1" Grid.Column = "0">
					<controls:ImageButton x:Name = "omg_emojiButton" ClassId = "omg_emoji" Image="omg_emoji.png" WidthRequest="45" HeightRequest="45"/>
					<Label Text = "OMGFace" HorizontalOptions = "CenterAndExpand"/>
				</StackLayout>
				<StackLayout  Grid.Row = "1" Grid.Column = "1">
					<controls:ImageButton x:Name = "love_emojiButton" ClassId = "love_emoji" Image="love_emoji.png" WidthRequest="45" HeightRequest="45"/>
					<Label Text = "SmileFace" HorizontalOptions = "CenterAndExpand"/>
				</StackLayout>
				<StackLayout Grid.Row = "1" Grid.Column = "2">
					<controls:ImageButton x:Name = "angry_emojiButton" ClassId = "angry_emoji" Image="angry_emoji.png" WidthRequest="45" HeightRequest="45"/>
					<Label Text = "VeryAngry" HorizontalOptions = "CenterAndExpand"/>
				</StackLayout>
			</Grid>
		</StackLayout>
	</ContentView.Content>
</pages:PopupPage>
